%h1= @project.name

%h3 Privacy Status: #{privacy_status(@project)}

= link_to "edit", edit_project_path(@project)

%h3 Lists

= link_to "Create List", new_project_list_path(@project), :remote => true, :locals => {:list => @list, :project => @project }

.form-area

%ul.list-area
  - @lists.each do |list|
    %li.list{:id => "list_#{list.id}"}
      %h3 #{ link_to list.name, list_path(list)}
      =link_to "Edit", edit_list_path(list), :remote => true, :class => "edit_list"
      %a.icon-chevron-up.show

      = link_to "Create Task", new_list_task_path(list), :remote => true, :locals => {:list => @list, :task => @task }, :class => "create_task"

      .new_task_form

      %ul
        -list.tasks.each do |task|
          %li.task{:id => "task_#{task.id}"}
            %div
              %h4= task.name

              %p= task.description
              =link_to "Edit Task", edit_list_task_path(list, task), :remote => true, :class => "edit_task"

